// prisma/schema.prisma
// Run: npx prisma generate && npx prisma db push

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String
  passwordHash  String
  photoUrl      String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  matchesAsUser1 Match[]   @relation("User1Matches")
  matchesAsUser2 Match[]   @relation("User2Matches")
  messages       Message[]
  votes          Vote[]
}

model Match {
  id        String      @id @default(cuid())
  user1Id   String
  user2Id   String
  user1Nick String      // Temporary nickname for user1
  user2Nick String      // Temporary nickname for user2
  date      String      // "YYYY-MM-DD" â€” one match per day
  phase     MatchPhase  @default(CHAT)
  outcome   MatchOutcome?
  createdAt DateTime    @default(now())
  expiresAt DateTime    // When chat locks (22h after drop)
  resolvedAt DateTime?  // When vote phase ends

  user1     User      @relation("User1Matches", fields: [user1Id], references: [id])
  user2     User      @relation("User2Matches", fields: [user2Id], references: [id])
  messages  Message[]
  votes     Vote[]

  @@unique([user1Id, date])
  @@unique([user2Id, date])
}

model Message {
  id        String   @id @default(cuid())
  matchId   String
  senderId  String
  content   String
  createdAt DateTime @default(now())

  match  Match @relation(fields: [matchId], references: [id], onDelete: Cascade)
  sender User  @relation(fields: [senderId], references: [id])
}

model Vote {
  id        String   @id @default(cuid())
  matchId   String
  userId    String
  vote      Boolean  // true = Yes, false = No
  createdAt DateTime @default(now())

  match Match @relation(fields: [matchId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id])

  @@unique([matchId, userId])
}

enum MatchPhase {
  CHAT
  VOTE
  RESOLVED
}

enum MatchOutcome {
  REVEALED   // Both voted Yes
  WIPED      // At least one voted No
}
